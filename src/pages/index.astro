---
import Layout from '../layouts/Layout.astro';
import gibson from '../assets/gibson.png';
import kyle from '../assets/kyle.png';

const services = [
	{
		title: 'Product engineering',
		body: 'Full-stack builds for SaaS and platforms with reliability baked in.',
		items: ['Architecture & cloud setup', 'APIs that stay boring', 'Interfaces that ship fast'],
	},
	{
		title: 'Internal tools',
		body: 'Dashboards, ops automation, and data flows that remove manual work.',
		items: ['Process automation', 'Data pipelines & reporting', 'Secure admin experiences'],
	},
	{
		title: 'Technical advisory',
		body: 'Fractional leadership when you need senior direction without the overhead.',
		items: ['Roadmaps that reduce risk', 'Hands-on code reviews', 'Hiring & onboarding support'],
	},
];

const steps = [
	{
		title: 'Orientation',
		body: 'We audit your current state, clarify outcomes, and cut the noise to a 6-week plan.',
	},
	{ title: 'Build in public', body: 'Design, ship, and demo weekly. No handoffs, just direct access.' },
	{
		title: 'Stabilize & hand over',
		body: 'Monitoring, docs, and onboarding so your team can run with what we built.',
	},
];

const wins = [
	{
		tag: 'Ops lift',
		title: 'Logistics platform',
		body: 'Consolidated scheduling and auditing, removing 40% of manual back-office work.',
	},
	{
		tag: 'Speed to market',
		title: 'Fintech dashboard',
		body: 'Launched billing and reporting in 5 weeks for a seed-stage team scaling revenue.',
	},
];

const tickerItems = [
	'SaaS launches',
	'Internal tooling',
	'Data platforms',
	'AI workflows',
	'Customer portals',
	'Billing rails',
	'Ops automation',
	'Design systems',
];

const signals = [
	{
		label: 'First deploy',
		value: 'Day 3–5',
		hint: 'Staging live with monitoring and rollback guards.',
	},
	{
		label: 'Weekly demos',
		value: 'Fridays',
		hint: 'Clips, notes, and the next sprint plan within 24 hours.',
	},
	{
		label: 'Reliability',
		value: 'SLOs + runbooks',
		hint: 'The boring bits—alerts, dashboards, and docs—ready for handover.',
	},
];

const accelerators = [
	{
		title: 'Production muscle',
		body: 'We lay observability, CI, and safe deploys before feature flags come off.',
	},
	{
		title: 'Secure by default',
		body: 'Principle-of-least-privilege infra, secret hygiene, and audit-friendly changes.',
	},
	{
		title: 'Design-to-build',
		body: 'We prototype with the same stack we ship, so you react to real interactions.',
	},
];
---

<Layout
	title="G&K Software, LLC — Software contracting without the drag"
	description="Senior engineers building SaaS, internal tools, and reliable web platforms with clear communication and fast delivery."
>
	<main class="relative mx-auto flex max-w-6xl flex-col gap-8 px-5 pb-24 pt-8 md:pt-10">
		<div
			aria-hidden="true"
			class="pointer-events-none absolute inset-x-0 top-0 -z-10 h-64 bg-linear-to-b from-white/10 to-transparent blur-3xl"
		/>

		<nav
			class="sticky top-4 z-20 flex flex-wrap items-center justify-between gap-3 rounded-xl border-2 border-neutral-900 bg-[#f8cd24] px-4 py-3 shadow-[8px_8px_0_#0f0f0f]"
		>
			<div class="flex items-center gap-3">
				<span
					class="flex h-11 w-11 items-center justify-center rounded-lg border-2 border-neutral-900 bg-white text-sm font-black text-neutral-900"
				>
					G&K
				</span>
				<div>
					<p class="text-xs font-semibold uppercase tracking-[0.22em] text-neutral-900">G&K Software, LLC</p>
					<p class="text-sm text-neutral-900/80">Software contracting, minus the agency overhead</p>
				</div>
			</div>
			<div class="flex flex-wrap items-center justify-end gap-2 text-neutral-900">
				<a class="text-sm font-semibold underline-offset-4 hover:underline" href="/#services">Services</a>
				<a class="text-sm font-semibold underline-offset-4 hover:underline" href="/#approach">Approach</a>
				<a class="text-sm font-semibold underline-offset-4 hover:underline" href="/#about">About</a>
				<a class="text-sm font-semibold underline-offset-4 hover:underline" href="/#contact">Contact</a>
				<a
					class="inline-flex items-center justify-center rounded-lg border-2 border-[#f8cd24] bg-neutral-900 px-4 py-2 text-sm font-semibold text-[#f8cd24] shadow-[4px_4px_0_#0f0f0f] transition hover:-translate-y-0.5 hover:shadow-[6px_6px_0_#0f0f0f]"
					href="mailto:hello@gnksoftware.com"
				>
					Book an intro
				</a>
			</div>
		</nav>

		<section class="relative overflow-hidden rounded-xl border-2 border-neutral-900 bg-white px-6 py-12 md:py-14 shadow-[14px_14px_0_#0f0f0f]">
			<div
				aria-hidden="true"
				class="pointer-events-none absolute inset-0 bg-[repeating-linear-gradient(135deg,rgba(0,0,0,0.06)_0,rgba(0,0,0,0.06)_12px,transparent_12px,transparent_24px)] opacity-40"
			></div>

			<div class="relative mb-4 flex flex-wrap items-center gap-3 text-xs font-semibold uppercase tracking-[0.22em] text-neutral-900">
				<span class="rounded-md border-2 border-neutral-900 bg-[#f8cd24] px-3 py-1 text-[11px]">Founder-led</span>
				<span class="rounded-md border-2 border-neutral-900 bg-[#d1ff4e] px-3 py-1 text-[11px]">Build in public</span>
				<span class="rounded-md border-2 border-neutral-900 bg-white px-3 py-1 text-[11px]">6–8 week delivery</span>
			</div>

			<div class="relative grid items-start gap-10 lg:grid-cols-[1.05fr,0.95fr]">
				<div class="space-y-5">
					<h1 class="text-3xl font-black leading-tight md:text-5xl">
						Less agency theater. More build time.
					</h1>
					<p class="max-w-2xl text-lg leading-8 text-neutral-800">
						We’re Gibson Martin and Kyle Dougan—two senior founders crafting lean, reliable software from
						Texas. You get strategy, architecture, and hands-on builds in one cadence, not a chain of handoffs.
					</p>
					<div class="flex flex-wrap gap-3">
						<a
							class="inline-flex items-center justify-center rounded-md border-2 border-[#f8cd24] bg-neutral-900 px-5 py-3 text-sm font-semibold text-[#f8cd24] shadow-[6px_6px_0_#0f0f0f] transition hover:-translate-y-0.5 hover:shadow-[8px_8px_0_#0f0f0f]"
							href="mailto:hello@gnksoftware.com"
						>
							Start a project
						</a>
						<a
							class="inline-flex items-center justify-center rounded-md border-2 border-neutral-900 bg-[#d1ff4e] px-5 py-3 text-sm font-semibold text-neutral-900 shadow-[6px_6px_0_#0f0f0f] transition hover:-translate-y-0.5 hover:shadow-[8px_8px_0_#0f0f0f]"
							href="#services"
						>
							See how we work
						</a>
					</div>
					<div class="flex flex-wrap gap-3 text-sm text-neutral-800">
						<span class="rounded-md border-2 border-neutral-900 bg-white px-3 py-1">Direct access to builders</span>
						<span class="rounded-md border-2 border-neutral-900 bg-white px-3 py-1">Weekly demos & visibility</span>
						<span class="rounded-md border-2 border-neutral-900 bg-white px-3 py-1">Infra + observability included</span>
					</div>

					<div class="grid gap-3 sm:grid-cols-2">
						<div class="rounded-lg border-2 border-neutral-900 bg-[#f8cd24] p-4 shadow-[8px_8px_0_#0f0f0f]">
							<p class="text-xs font-semibold uppercase tracking-[0.22em] text-neutral-900">Time to first deploy</p>
							<p class="mt-2 text-3xl font-black leading-tight">Days 3–5</p>
							<p class="mt-1 text-sm text-neutral-900">
								Staging live with feature flags, health checks, and rollbacks wired.
							</p>
						</div>
						<div class="rounded-lg border-2 border-neutral-900 bg-white p-4 shadow-[8px_8px_0_#0f0f0f]">
							<p class="text-xs font-semibold uppercase tracking-[0.22em] text-neutral-900">First production slice</p>
							<p class="mt-2 text-3xl font-black leading-tight">6–8 weeks</p>
							<p class="mt-1 text-sm text-neutral-900">
								One core flow live (e.g., onboarding + primary workflow + billing) with handover-ready docs.
							</p>
						</div>
					</div>
					<div class="rounded-lg border-2 border-neutral-900 bg-[#f1ede1] p-4 text-xs leading-5 text-neutral-900 shadow-[8px_8px_0_#0f0f0f]">
						Caveats we call out in week 1: SSO/SCIM, complex data migrations, and heavy third-party integrations
						can stretch timelines. We flag risks early and adjust scope before we commit to dates.
					</div>
				</div>

				<div class="relative">
					<div class="relative space-y-4 rounded-xl border-2 border-neutral-900 bg-[#f7f4ed] p-5 shadow-[12px_12px_0_#0f0f0f]">
						<div class="flex items-start justify-between gap-3">
							<div>
								<p class="text-xs font-semibold uppercase tracking-[0.22em] text-neutral-800">Engagement signal</p>
								<p class="text-base font-semibold text-neutral-900">What working together feels like</p>
							</div>
							<span class="rounded-md border-2 border-neutral-900 bg-[#d1ff4e] px-3 py-1 text-xs font-semibold uppercase tracking-[0.16em] text-neutral-900">
								Live
							</span>
						</div>
						<div class="grid gap-3 rounded-lg border-2 border-neutral-900 bg-white p-3">
							{signals.map((signal) => (
								<div class="flex items-start gap-3 rounded-md border-2 border-neutral-900 bg-[#f1ede1] px-3 py-2">
									<div class="flex h-10 w-10 shrink-0 items-center justify-center rounded-sm border-2 border-neutral-900 bg-[#f8cd24] text-sm font-black text-neutral-900">
										{signal.label.slice(0, 2)}
									</div>
									<div>
										<p class="text-sm font-semibold text-neutral-900">{signal.label}</p>
										<p class="text-base font-black leading-tight text-neutral-900">{signal.value}</p>
										<p class="text-xs leading-5 text-neutral-800">{signal.hint}</p>
									</div>
								</div>
							))}
						</div>
						<div class="rounded-lg border-2 border-neutral-900 bg-white p-4">
							<p class="text-xs font-semibold uppercase tracking-[0.2em] text-neutral-800">Stack in motion</p>
							<div class="mt-2 grid gap-2 text-sm text-neutral-900">
								<div class="flex items-center justify-between gap-2 rounded-md border-2 border-neutral-900 bg-[#f8cd24] px-3 py-2">
									<span class="font-semibold text-neutral-900">TypeScript, Astro, React, Node</span>
									<span class="rounded-sm border-2 border-neutral-900 bg-neutral-900 px-2 py-1 text-[11px] font-semibold text-[#f8cd24]">
										shipping
									</span>
								</div>
								<div class="flex items-center justify-between gap-2 rounded-md border-2 border-neutral-900 bg-white px-3 py-2">
									<span class="font-semibold text-neutral-900">Postgres, Redis, queues</span>
									<span class="rounded-sm border-2 border-neutral-900 bg-[#f7f4ed] px-2 py-1 text-[11px] font-semibold text-neutral-900">ready</span>
								</div>
								<div class="flex items-center justify-between gap-2 rounded-md border-2 border-neutral-900 bg-white px-3 py-2">
									<span class="font-semibold text-neutral-900">Supabase, Vercel, Fly.io, AWS</span>
									<span class="rounded-sm border-2 border-neutral-900 bg-[#f7f4ed] px-2 py-1 text-[11px] font-semibold text-neutral-900">multi-cloud</span>
								</div>
							</div>
						</div>
						<div class="flex items-center justify-between rounded-lg border-2 border-neutral-900 bg-[#d1ff4e] px-4 py-3 text-sm text-neutral-900">
							<div class="flex items-center gap-2">
								<span class="h-2 w-2 animate-pulse rounded-full bg-neutral-900"></span>
								<p class="font-semibold uppercase tracking-[0.16em]">Status</p>
							</div>
							<p class="font-semibold text-neutral-900">Founders online • Response in <span class="underline decoration-neutral-900 decoration-2">&lt; 2 hrs</span></p>
						</div>
					</div>
				</div>
			</div>
		</section>

		<div class="relative overflow-hidden rounded-lg border-2 border-neutral-900 bg-white py-3 shadow-[10px_10px_0_#0f0f0f]">
			<div class="flex animate-ticker gap-6 whitespace-nowrap text-xs font-semibold uppercase tracking-[0.28em] text-neutral-900">
				{[...tickerItems, ...tickerItems].map((item, idx) => (
					<span class="rounded-md border-2 border-neutral-900 bg-[#f8cd24] px-4 py-2">
						{item}
					</span>
				))}
			</div>
			<div
				aria-hidden="true"
				class="pointer-events-none absolute inset-y-0 left-0 w-24 bg-linear-to-r from-[#f7f4ed] to-transparent"
			/>
			<div
				aria-hidden="true"
				class="pointer-events-none absolute inset-y-0 right-0 w-24 bg-linear-to-l from-[#f7f4ed] to-transparent"
			/>
		</div>

		<section id="services" class="relative overflow-hidden rounded-xl border-2 border-neutral-900 bg-white px-6 py-10 shadow-[12px_12px_0_#0f0f0f]">
			<div class="relative flex flex-wrap items-center justify-between gap-3">
				<div class="space-y-2">
					<p class="text-xs font-semibold uppercase tracking-[0.22em] text-neutral-800">Capabilities</p>
					<h2 class="text-2xl font-black md:text-3xl">Web products with senior ownership.</h2>
					<p class="text-base leading-7 text-neutral-800">
						No handoffs, just disciplined engineering and design that keeps your roadmap moving.
					</p>
				</div>
				<div class="rounded-md border-2 border-neutral-900 bg-[#d1ff4e] px-4 py-2 text-xs font-semibold uppercase tracking-[0.18em] text-neutral-900 shadow-[6px_6px_0_#0f0f0f]">
					Delivery in weeks, not quarters
				</div>
			</div>
			<div class="relative mt-6 grid gap-4 md:grid-cols-2 lg:grid-cols-3">
				{services.map((service) => (
					<article class="flex h-full flex-col justify-between gap-4 rounded-lg border-2 border-neutral-900 bg-[#f1ede1] p-5 shadow-[8px_8px_0_#0f0f0f]">
						<div class="space-y-2">
							<div class="mb-2 h-1 w-12 bg-neutral-900"></div>
							<h3 class="text-lg font-semibold">{service.title}</h3>
							<p class="text-sm leading-6 text-neutral-800">{service.body}</p>
						</div>
						<ul class="space-y-2 text-sm text-neutral-800">
							{service.items.map((item) => (
								<li class="flex items-start gap-2">
									<span class="mt-1 h-2 w-2 border-2 border-neutral-900 bg-[#f8cd24]"></span>
									<span>{item}</span>
								</li>
							))}
						</ul>
					</article>
				))}
			</div>
		</section>

		<section id="approach" class="grid gap-4 lg:grid-cols-2">
			<div class="flex flex-col gap-4 rounded-xl border-2 border-neutral-900 bg-white p-6 shadow-[12px_12px_0_#0f0f0f]">
				<p class="text-xs font-semibold uppercase tracking-[0.22em] text-neutral-800">Engagement model</p>
				<h2 class="text-2xl font-black md:text-3xl">Pragmatic, visible, predictable.</h2>
				<ol class="space-y-4">
					{steps.map((step, index) => (
						<li class="flex items-start gap-3">
							<div class="flex h-10 w-10 shrink-0 items-center justify-center rounded-sm border-2 border-neutral-900 bg-[#f8cd24] text-sm font-black">
								{index + 1}
							</div>
							<div class="space-y-1">
								<p class="text-base font-semibold">{step.title}</p>
								<p class="text-sm leading-6 text-neutral-800">{step.body}</p>
							</div>
						</li>
					))}
				</ol>
				<div class="border-t-2 border-neutral-900 pt-3 text-sm text-neutral-800">
					We slot into your stack and rhythms—Slack, Linear, Notion, or whatever keeps your team aligned.
					If we spot risk (SSO/SCIM, compliance reviews, data migrations), we surface it in the first week so
					timelines stay honest.
				</div>
			</div>
			<div class="flex flex-col gap-4 rounded-xl border-2 border-neutral-900 bg-[#f1ede1] p-6 shadow-[12px_12px_0_#0f0f0f]">
				<p class="text-xs font-semibold uppercase tracking-[0.22em] text-neutral-800">Recent wins</p>
				<div class="grid gap-3">
					{wins.map((win) => (
						<div class="rounded-lg border-2 border-neutral-900 bg-white p-4">
							<span class="inline-flex items-center rounded-sm border-2 border-neutral-900 bg-[#f8cd24] px-2 py-1 text-xs font-black uppercase tracking-[0.14em] text-neutral-900">
								{win.tag}
							</span>
							<h3 class="mt-3 text-lg font-semibold">{win.title}</h3>
							<p class="text-sm leading-6 text-neutral-800">{win.body}</p>
						</div>
					))}
				</div>
				<div class="grid gap-3 border-t-2 border-neutral-900 pt-4 md:grid-cols-2">
					<div>
						<p class="text-3xl font-black leading-none">6–8</p>
						<p class="text-sm text-neutral-800">week delivery window for most engagements</p>
					</div>
					<div>
						<p class="text-3xl font-black leading-none">100%</p>
						<p class="text-sm text-neutral-800">senior talent; founders build, not account managers</p>
					</div>
				</div>
			</div>
		</section>

		<section class="rounded-xl border-2 border-neutral-900 bg-white px-6 py-10 shadow-[12px_12px_0_#0f0f0f]">
			<div class="relative flex flex-wrap items-center justify-between gap-4">
				<div class="space-y-1">
					<p class="text-xs font-semibold uppercase tracking-[0.22em] text-neutral-800">Operating principles</p>
					<h2 class="text-2xl font-black md:text-3xl">How we keep momentum without losing rigor.</h2>
				</div>
				<div class="flex items-center gap-2 rounded-md border-2 border-neutral-900 bg-[#f8cd24] px-3 py-2 text-xs font-semibold uppercase tracking-[0.16em] text-neutral-900 shadow-[6px_6px_0_#0f0f0f]">
					<span class="h-2 w-2 animate-pulse rounded-full bg-neutral-900"></span>
					<span>In production mindset</span>
				</div>
			</div>
			<div class="relative mt-6 grid gap-4 md:grid-cols-3">
				{accelerators.map((accelerator) => (
					<article class="flex h-full flex-col justify-between gap-3 rounded-lg border-2 border-neutral-900 bg-[#f1ede1] p-5 shadow-[8px_8px_0_#0f0f0f]">
						<div class="space-y-2">
							<div class="inline-flex items-center rounded-sm border-2 border-neutral-900 bg-white px-3 py-1 text-[11px] font-semibold uppercase tracking-[0.18em] text-neutral-900">
								Signal
							</div>
							<h3 class="text-lg font-semibold">{accelerator.title}</h3>
							<p class="text-sm leading-6 text-neutral-800">{accelerator.body}</p>
						</div>
						<div class="flex items-center gap-2 text-xs font-semibold uppercase tracking-[0.18em] text-neutral-900">
							<span class="h-[5px] w-[5px] border-2 border-neutral-900 bg-[#d1ff4e]"></span>
							<span>Shipped weekly</span>
						</div>
					</article>
				))}
			</div>
		</section>

		<section id="about" class="rounded-xl border-2 border-neutral-900 bg-white px-6 py-10 shadow-[12px_12px_0_#0f0f0f]">
			<div class="max-w-3xl space-y-2">
				<p class="text-xs font-semibold uppercase tracking-[0.22em] text-neutral-800">Who we are</p>
				<h2 class="text-2xl font-black md:text-3xl">Founders stay in the work.</h2>
				<p class="text-base leading-7 text-neutral-800">
					G&K Software, LLC is Texas-registered and entirely founder-built.
				</p>
			</div>
			<div class="mt-6 grid gap-4 md:grid-cols-2">
				<div class="flex items-start justify-start gap-3 rounded-lg border-2 border-neutral-900 bg-[#f1ede1] p-4 shadow-[8px_8px_0_#0f0f0f]">
					<img src={gibson.src} alt="Gibson Martin" class="h-12 w-12 rounded-sm border-2 border-neutral-900 bg-white object-cover" />
					<div class="space-y-1">
						<p class="text-base font-semibold">Gibson Martin</p>
						<p class="text-sm leading-6 text-neutral-800">
							Systems-minded builder who loves simplifying data flows and making ops painless.
						</p>
					</div>
				</div>
				<div class="flex items-start justify-start gap-3 rounded-lg border-2 border-neutral-900 bg-[#f1ede1] p-4 shadow-[8px_8px_0_#0f0f0f]">
					<img src={kyle.src} alt="Kyle Dougan" class="h-12 w-12 rounded-sm border-2 border-neutral-900 bg-white object-cover" />
					<div class="space-y-1">
						<p class="text-base font-semibold">Kyle Dougan</p>
						<p class="text-sm leading-6 text-neutral-800">
							Full-stack product engineer focused on fast feedback loops and production readiness.
						</p>
					</div>
				</div>
			</div>
		</section>

		<section
			id="contact"
			class="grid gap-4 rounded-xl border-2 border-neutral-900 bg-white px-6 py-10 shadow-[12px_12px_0_#0f0f0f] md:grid-cols-[2fr,1fr]"
		>
			<div class="space-y-3">
				<p class="text-xs font-semibold uppercase tracking-[0.22em] text-neutral-800">Let’s talk</p>
				<h2 class="text-2xl font-black md:text-3xl">Need momentum? We can help.</h2>
				<p class="text-base leading-7 text-neutral-800">
					Tell us about your product and timelines. We’ll respond within one business day with next steps.
				</p>
				<div class="flex flex-wrap gap-3">
					<a
						class="inline-flex items-center justify-center rounded-md border-2 border-[#f8cd24] bg-neutral-900 px-5 py-3 text-sm font-semibold text-[#f8cd24] shadow-[6px_6px_0_#0f0f0f] transition hover:-translate-y-0.5 hover:shadow-[8px_8px_0_#0f0f0f]"
						href="mailto:hello@gnksoftware.com?subject=Intro%20call%20request"
					>
						Book an intro call
					</a>
					<a
						class="inline-flex items-center justify-center rounded-md border-2 border-neutral-900 bg-[#d1ff4e] px-5 py-3 text-sm font-semibold text-neutral-900 shadow-[6px_6px_0_#0f0f0f] transition hover:-translate-y-0.5 hover:shadow-[8px_8px_0_#0f0f0f]"
						href="mailto:hello@gnksoftware.com?subject=Project%20details"
					>
						Send project details
