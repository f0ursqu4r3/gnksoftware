---
import Layout from '../layouts/Layout.astro';
import gibson from '../assets/gibson.png';
import kyle from '../assets/kyle.png';

const taglines = [
	'Modernization done safely, reliably, and without disruption.',
	'Future-ready systems for organizations that can’t afford downtime.',
	'From legacy complexity to operational clarity.',
];

const whatWeDo = [
	{
		title: 'System Modernization',
		items: [
			'Modernization strategy and roadmap development',
			'Incremental migration approaches that reduce operational risk',
			'Replatforming and refactoring aging systems',
			'Service-boundary identification and modularization',
			'Data migration planning and execution',
			'API modernization and interface redesign',
		],
	},
	{
		title: 'Enterprise Backend Development',
		items: [
			'Backend systems for high-throughput, high-availability operations',
			'Automated workflows and internal tools',
			'Job orchestration, data processing, and pipeline design',
			'Secure, compliance-aware application development',
			'Reliability, performance, and maintainability improvements',
		],
	},
	{
		title: 'Legacy System Integration',
		items: [
			'Bridging legacy systems with new platforms',
			'Standardizing interfaces and communication patterns',
			'Message queues, event-driven workflows, and interoperability layers',
			'Observability, logging, auditing, and stability upgrades',
		],
	},
];

const industries = [
	'Banking, payments, financial services',
	'Insurance',
	'Logistics, warehousing, supply chain',
	'Healthcare and medical systems',
	'Government, public sector, agencies',
	'Large-scale enterprise operations',
];

const reasons = [
	{
		title: 'Reliable Execution',
		body: 'Clear planning, predictable delivery schedules, and transparent communication throughout every phase of the project.',
	},
	{
		title: 'Low-Risk Modernization',
		body: 'We prioritize business continuity—modernizing incrementally, preserving existing workflows, and avoiding downtime.',
	},
	{
		title: 'Broad Enterprise Experience',
		body: 'Comfortable working with long-running systems, strict compliance environments, and established operational processes.',
	},
	{
		title: 'Flexible Engagement',
		body: 'We can lead modernization initiatives, support existing teams, or partner with system integrators.',
	},
];

const engagementModels = [
	'Modernization initiatives: targeted upgrades, migrations, or restructuring of legacy systems.',
	'Backend system development: design and delivery of new enterprise systems and internal tools.',
	'Integration projects: connecting platforms, streamlining data flows, and reducing fragmentation.',
	'Architecture and codebase assessments: rapid evaluations of risk, stability, technical debt, and modernization options.',
];

const capabilities = [
	'Legacy system analysis',
	'Data migration and modeling',
	'API modernization',
	'Distributed backend architectures',
	'Secure system design',
	'Workflow automation',
	'Performance tuning',
	'CI/CD and deployment automation',
	'Compliance-aware development (finance, healthcare, gov)',
];

const stats = [
	{ label: 'Assessment output', value: 'Day 3–5', hint: 'System map, risks, and pilot plan.' },
	{ label: 'Pilot live', value: '6–8 weeks', hint: 'One critical flow in production behind flags.' },
	{ label: 'Response time', value: '< 2 hrs', hint: 'Direct access to the founders.' },
];

const shortBlurbs = [
	'Modernization without disruption.',
	'Enterprise systems built for longevity.',
	'Dependable engineering for critical operations.',
	'Upgrade the system—preserve the business logic.',
];
---

<Layout
	title="G&K Software, LLC — Modernization and internal tooling for enterprise teams"
	description="Founding engineers modernizing legacy systems and building internal platforms with clear governance and production standards."
>
	<main class="flex w-full flex-col gap-10 pb-20 md:gap-12">
		<header class="w-full border-b border-(--color-line) pb-5 sticky top-0 bg-(--color-panel) z-10 shadow-(--shadow-soft) pt-4">
			<div class="mx-auto flex max-w-5xl flex-wrap items-center justify-between gap-4 px-5">
				<div class="flex items-center gap-3">
					<span
						class="flex h-11 w-11 items-center justify-center rounded-xl border border-(--color-ink) bg-(--color-ink) text-sm font-black text-(--color-cream)"
					>
						G&K
					</span>
					<div>
						<p class="text-xs font-semibold uppercase tracking-[0.22em] text-(--color-ink-muted)">G&K Software, LLC</p>
						<p class="text-sm text-(--color-ink-soft)">Modernization and internal tooling for enterprises</p>
					</div>
				</div>
				<div class="flex flex-wrap items-center gap-3">
					<a class="text-sm font-semibold text-(--color-ink-soft) hover:text-(--color-ink)" href="/#services">Services</a>
					<a class="text-sm font-semibold text-(--color-ink-soft) hover:text-(--color-ink)" href="/#approach">Approach</a>
					<a class="text-sm font-semibold text-(--color-ink-soft) hover:text-(--color-ink)" href="/#about">About</a>
					<a class="text-sm font-semibold text-(--color-ink-soft) hover:text-(--color-ink)" href="/#contact">Contact</a>
					<a
						class="inline-flex items-center justify-center border border-(--color-ink) bg-(--color-ink) px-4 py-2 text-sm font-semibold text-(--color-cream) transition hover:brightness-110"
						href="mailto:hello@gnksoftware.com"
					>
						Email
					</a>
				</div>
			</div>
		</header>

		<section class="w-full border-b border-(--color-line) bg-(--color-panel) py-8 shadow-(--shadow-soft)">
			<div class="mx-auto grid max-w-5xl gap-8 px-5 md:grid-cols-[1.2fr,0.8fr]">
				<div class="space-y-5">
					<h1 class="font-['DM_Serif_Display'] text-3xl leading-tight text-(--color-ink) md:text-4xl">
						Modernization done safely, reliably, and without disruption.
					</h1>
					<p class="text-base leading-7 text-(--color-ink-soft)">
						We help enterprises modernize legacy systems, strengthen backend operations, and deliver dependable, long-lived software.
						Our work supports critical processes in finance, logistics, healthcare, and other high-reliability industries.
					</p>
					<ul class="space-y-2 text-sm text-(--color-ink-soft)">
						{taglines.map((line) => (
							<li class="border-t border-(--color-line) pt-2">{line}</li>
						))}
					</ul>
					<div class="flex flex-wrap gap-3">
						<a
							class="inline-flex items-center justify-center border border-(--color-ink) bg-(--color-ink) px-5 py-3 text-sm font-semibold text-(--color-cream) transition hover:brightness-110"
							href="mailto:hello@gnksoftware.com?subject=Assessment%20request"
						>
							Request an assessment
						</a>
						<a
							class="inline-flex items-center justify-center border border-(--color-line) bg-(--color-panel-strong) px-5 py-3 text-sm font-semibold text-(--color-ink) transition hover:border-(--color-ink-muted)"
							href="#services"
						>
							View services
						</a>
					</div>
				</div>
				<div class="space-y-4 text-sm text-(--color-ink-soft)">
					{stats.map((stat) => (
						<div class="border-t border-(--color-line) pt-3">
							<p class="text-xs font-semibold uppercase tracking-[0.18em] text-(--color-ink-muted)">{stat.label}</p>
							<p class="text-2xl font-semibold text-(--color-ink)">{stat.value}</p>
							<p>{stat.hint}</p>
						</div>
					))}
					<div class="border-t border-(--color-line) pt-3">
						Caveats we surface early: data migrations, SSO/SCIM, compliance reviews, vendor approvals, and cross-team dependencies.
					</div>
				</div>
			</div>
		</section>

		<section id="services" class="w-full border-b border-(--color-line) bg-(--color-panel) py-8 shadow-(--shadow-soft)">
			<div class="mx-auto flex max-w-5xl flex-col gap-4 px-5">
				<div class="flex flex-wrap items-start justify-between gap-3">
					<div>
						<p class="text-xs font-semibold uppercase tracking-[0.22em] text-(--color-ink-muted)">What we do</p>
						<h2 class="font-['DM_Serif_Display'] text-2xl text-(--color-ink) md:text-3xl">From legacy complexity to operational clarity.</h2>
						<p class="text-sm text-(--color-ink-soft)">Modernization and backend delivery for teams that cannot afford downtime.</p>
					</div>
					<span class="text-xs font-semibold uppercase tracking-[0.18em] text-(--color-ink-muted)">Pilots in weeks</span>
				</div>
				<div class="grid gap-4 md:grid-cols-3">
					{whatWeDo.map((item) => (
						<article class="flex h-full flex-col gap-3 border-t border-(--color-line) pt-3">
							<h3 class="text-lg font-semibold text-(--color-ink)">{item.title}</h3>
							<ul class="space-y-2 text-sm text-(--color-ink-soft)">
								{item.items.map((line) => (
									<li class="flex items-start gap-2">
										<span class="mt-1.5 h-2 w-2 rounded-full bg-(--color-ink)"></span>
										<span>{line}</span>
									</li>
								))}
							</ul>
						</article>
					))}
				</div>
			</div>
		</section>

		<section class="w-full border-b border-(--color-line) bg-(--color-panel-strong) py-8 shadow-(--shadow-soft)">
			<div class="mx-auto flex max-w-5xl flex-col gap-4 px-5">
				<div class="flex flex-wrap items-start justify-between gap-3">
					<div>
						<p class="text-xs font-semibold uppercase tracking-[0.22em] text-(--color-ink-muted)">Industries we support</p>
						<h2 class="font-['DM_Serif_Display'] text-2xl text-(--color-ink) md:text-3xl">Built for high-reliability environments.</h2>
					</div>
				</div>
				<div class="grid gap-2 text-sm text-(--color-ink-soft) md:grid-cols-2">
					{industries.map((industry) => (
						<div class="border-t border-(--color-line) pt-2">{industry}</div>
					))}
				</div>
			</div>
		</section>

		<section id="approach" class="w-full border-b border-(--color-line) bg-(--color-panel-strong) py-8 shadow-(--shadow-soft)">
			<div class="mx-auto grid max-w-5xl gap-8 px-5 md:grid-cols-2">
				<div class="space-y-3">
					<p class="text-xs font-semibold uppercase tracking-[0.22em] text-(--color-ink-muted)">Why organizations choose G&K</p>
					<h2 class="font-['DM_Serif_Display'] text-2xl text-(--color-ink) md:text-3xl">Reliable, low-risk execution.</h2>
					<ol class="space-y-3 text-(--color-ink-soft)">
						{reasons.map((reason, index) => (
							<li class="flex gap-3 border-t border-(--color-line) pt-3">
								<div class="flex h-9 w-9 shrink-0 items-center justify-center border border-(--color-line) text-sm font-semibold text-(--color-ink)">
									{index + 1}
								</div>
								<div>
									<p class="text-base font-semibold text-(--color-ink)">{reason.title}</p>
									<p class="text-sm leading-6">{reason.body}</p>
								</div>
							</li>
						))}
					</ol>
				</div>
				<div class="space-y-4">
					<p class="text-xs font-semibold uppercase tracking-[0.22em] text-(--color-ink-muted)">Engagement models</p>
					<div class="space-y-3 text-sm text-(--color-ink-soft)">
						{engagementModels.map((model) => (
							<p class="border-t border-(--color-line) pt-3">{model}</p>
						))}
					</div>
				</div>
			</div>
		</section>

		<section class="w-full border-b border-(--color-line) bg-(--color-ink) py-8 text-(--color-cream) shadow-(--shadow-soft)">
			<div class="mx-auto flex max-w-5xl flex-col gap-4 px-5">
				<div class="flex flex-wrap items-start justify-between gap-3">
					<div>
						<p class="text-xs font-semibold uppercase tracking-[0.22em] text-(--color-cream)/80">Capabilities</p>
						<h2 class="font-['DM_Serif_Display'] text-2xl text-(--color-cream) md:text-3xl">What is included by default.</h2>
					</div>
					<span class="text-xs font-semibold text-(--color-cream)/80">No add-ons</span>
				</div>
				<div class="grid gap-3 md:grid-cols-2">
					{capabilities.map((capability) => (
						<p class="border-t border-(--color-cream)/30 pt-3 text-sm text-(--color-cream)/90">{capability}</p>
					))}
				</div>
			</div>
		</section>

		<section class="w-full border-b border-(--color-line) bg-(--color-panel-strong) py-6 shadow-(--shadow-soft)">
			<div class="mx-auto flex max-w-5xl flex-wrap gap-3 px-5 text-sm text-(--color-ink-soft)">
				{shortBlurbs.map((blurb) => (
					<span class="border border-(--color-line) px-3 py-1">{blurb}</span>
				))}
			</div>
		</section>

		<section id="about" class="w-full border-b border-(--color-line) bg-(--color-panel) py-8 shadow-(--shadow-soft)">
			<div class="mx-auto flex max-w-5xl flex-col gap-6 px-5">
				<div class="space-y-2">
					<p class="text-xs font-semibold uppercase tracking-[0.22em] text-(--color-ink-muted)">Who we are</p>
					<h2 class="font-['DM_Serif_Display'] text-2xl text-(--color-ink) md:text-3xl">Founders stay in the work.</h2>
					<p class="text-sm leading-7 text-(--color-ink-soft)">
						G&K Software LLC is a remote-first engineering company focused on modernization and core backend development. We work with
						organizations that depend on stable, long-lived systems and need a reliable partner to help them evolve their technology safely
						and effectively.
					</p>
				</div>
				<div class="grid gap-6 md:grid-cols-2">
					<div class="flex items-start gap-3 border-t border-(--color-line) pt-3">
						<img src={gibson.src} alt="Gibson Martin" class="h-11 w-11 rounded-full border border-(--color-line) bg-(--color-panel-strong) object-cover" />
						<div class="space-y-1">
							<p class="text-base font-semibold text-(--color-ink)">Gibson Martin</p>
							<p class="text-sm leading-6 text-(--color-ink-soft)">
								Systems-minded builder focused on data contracts, evented systems, and making ops/audit work visible.
							</p>
						</div>
					</div>
					<div class="flex items-start gap-3 border-t border-(--color-line) pt-3">
						<img src={kyle.src} alt="Kyle Dougan" class="h-11 w-11 rounded-full border border-(--color-line) bg-(--color-panel-strong) object-cover" />
						<div class="space-y-1">
							<p class="text-base font-semibold text-(--color-ink)">Kyle Dougan</p>
							<p class="text-sm leading-6 text-(--color-ink-soft)">
								Full-stack engineer focused on migrations, observability, and putting guardrails in before launch.
							</p>
						</div>
					</div>
				</div>
			</div>
		</section>

		<section
			id="contact"
			class="w-full bg-(--color-panel-strong) py-8 shadow-(--shadow-soft) md:rounded-lg"
		>
			<div class="mx-auto flex max-w-5xl flex-col gap-6 px-5">
				<div class="space-y-3">
					<p class="text-xs font-semibold uppercase tracking-[0.22em] text-(--color-ink-muted)">Let’s talk</p>
					<h2 class="font-['DM_Serif_Display'] text-2xl text-(--color-ink) md:text-3xl">Modernizing a critical system?</h2>
					<p class="text-sm leading-7 text-(--color-ink-soft)">
						Share the system, constraints, and timelines. We respond within one business day with a pilot proposal and
						procurement-ready next steps.
					</p>
					<div class="flex flex-wrap gap-3">
						<a
							class="inline-flex items-center justify-center border border-(--color-ink) bg-(--color-ink) px-5 py-3 text-sm font-semibold text-(--color-cream) transition hover:brightness-110"
							href="mailto:hello@gnksoftware.com?subject=Assessment%20request"
						>
							Schedule an assessment
						</a>
						<a
							class="inline-flex items-center justify-center border border-(--color-line) bg-(--color-panel) px-5 py-3 text-sm font-semibold text-(--color-ink) transition hover:border-(--color-ink-muted)"
							href="mailto:hello@gnksoftware.com?subject=System%20overview"
						>
							Send system overview
						</a>
					</div>
				</div>
				<div class="grid gap-4 md:grid-cols-2">
					<div class="space-y-2 border-t border-(--color-line) pt-3 text-sm text-(--color-ink-soft)">
						<p class="font-semibold text-(--color-ink)">Registered in Texas. Remote-first globally.</p>
						<p>Procurement-ready: security questionnaires, MSAs, SOC/SOX alignment.</p>
						<p>Email: <a class="underline decoration-(--color-ink) underline-offset-2" href="mailto:hello@gnksoftware.com">hello@gnksoftware.com</a></p>
					</div>
					<div class="space-y-2 border-t border-(--color-line) pt-3 text-sm text-(--color-ink-soft)">
						<p class="font-semibold text-(--color-ink)">Response time</p>
						<p>&lt; 2 hours during business hours.</p>
						<p>Channels: Email, Slack/Teams bridge on request.</p>
					</div>
				</div>
			</div>
		</section>

		<footer class="w-full border-t border-(--color-line) pt-6">
			<div class="mx-auto flex max-w-5xl flex-wrap items-center justify-between gap-3 px-5 text-sm text-(--color-ink-soft)">
				<div>
					<p class="font-semibold uppercase tracking-[0.18em] text-(--color-ink)">G&K Software, LLC</p>
					<p>Texas registered. Built by Gibson Martin and Kyle Dougan.</p>
				</div>
				<div class="flex flex-wrap items-center gap-3">
					<a class="font-semibold text-(--color-ink-soft) hover:text-(--color-ink)" href="/">Home</a>
					<a class="font-semibold text-(--color-ink-soft) hover:text-(--color-ink)" href="/#about">About</a>
					<a class="font-semibold text-(--color-ink-soft) hover:text-(--color-ink)" href="mailto:hello@gnksoftware.com">Contact</a>
				</div>
			</div>
		</footer>
	</main>
</Layout>
