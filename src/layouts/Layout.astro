---
import "../styles/global.css";

type Props = {
	title?: string;
	description?: string;
};

const {
	title = 'G&K Software, LLC',
	description = 'Software studio building reliable web products, platforms, and internal tools.',
} = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<meta name="description" content={description} />
		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link
			href="https://fonts.googleapis.com/css2?family=Space+Grotesk:wght@400;500;600;700&family=Manrope:wght@400;500;600;700&display=swap"
			rel="stylesheet"
		/>
	</head>
	<body>
		<slot />
	</body>
</html>

<style>
	:root {
		color-scheme: dark;
		--ink: #0b1224;
		--paper: #0f162c;
		--card: rgba(255, 255, 255, 0.04);
		--muted: #b7c6e3;
		--accent: #ffb454;
		--accent-2: #7fe7d3;
		--stroke: rgba(255, 255, 255, 0.08);
	}

	*,
	*::before,
	*::after {
		box-sizing: border-box;
	}

	html,
	body {
		margin: 0;
		min-height: 100%;
		background: radial-gradient(circle at 20% 20%, rgba(255, 180, 84, 0.08), transparent 30%),
			radial-gradient(circle at 80% 10%, rgba(127, 231, 211, 0.08), transparent 32%),
			radial-gradient(circle at 60% 70%, rgba(119, 155, 255, 0.08), transparent 28%),
			linear-gradient(145deg, #0b1224 0%, #0c1327 40%, #0f1835 100%);
		color: white;
		font-family: 'Manrope', 'Space Grotesk', system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI',
			sans-serif;
		-webkit-font-smoothing: antialiased;
	}

	a {
		color: inherit;
	}

	button,
	a,
	input,
	textarea {
		font-family: inherit;
	}

	::selection {
		background: rgba(255, 180, 84, 0.25);
		color: white;
	}
</style>
