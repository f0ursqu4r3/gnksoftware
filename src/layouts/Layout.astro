---
import "../styles/global.css";

type Props = {
	title?: string;
	description?: string;
};

const {
	title = 'G&K Software, LLC',
	description = 'Software studio building reliable web products, platforms, and internal tools.',
} = Astro.props;
---

<!doctype html>
<html lang="en" data-theme="light">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<meta name="description" content={description} />
		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link
			href="https://fonts.googleapis.com/css2?family=Bricolage+Grotesque:wght@400;600;700&family=Space+Grotesk:wght@400;500;600;700&display=swap"
			rel="stylesheet"
		/>
		<script>
			(() => {
				try {
					const storageKey = 'gnk-theme';
					const root = document.documentElement;
					const prefersDark = window.matchMedia('(prefers-color-scheme: dark)').matches;
					const stored = localStorage.getItem(storageKey);
					const theme = stored === 'light' || stored === 'dark' ? stored : prefersDark ? 'dark' : 'light';
					root.dataset.theme = theme;
				} catch (error) {
					console.error('Theme bootstrap failed', error);
				}
			})();
		</script>
	</head>
	<body class="theme-shell m-0 min-h-screen font-['Bricolage_Grotesque','Space_Grotesk',system-ui,-apple-system,BlinkMacSystemFont,'Segoe_UI',sans-serif] antialiased">
		<slot />
		<script>
			(() => {
				try {
					const storageKey = 'gnk-theme';
					const root = document.documentElement;
					const toggle = document.querySelector('[data-theme-toggle]') as HTMLElement | null;
					const label = document.querySelector('[data-theme-toggle-label]') as HTMLElement | null;
					const media = window.matchMedia('(prefers-color-scheme: dark)');

					const setTheme = (theme: string, persist = true) => {
						root.dataset.theme = theme;
						if (persist) {
							localStorage.setItem(storageKey, theme);
						}
						if (toggle) {
							toggle.dataset.state = theme;
							toggle.setAttribute('aria-pressed', theme === 'dark' ? 'true' : 'false');
						}
						if (label) {
							label.textContent = theme === 'dark' ? 'Dark' : 'Light';
						}
					};

					const getPreferred = () => {
						const stored = localStorage.getItem(storageKey);
						if (stored === 'light' || stored === 'dark') return stored;
						return media.matches ? 'dark' : 'light';
					};

					const syncSystem = (event: { matches: any; }) => {
						if (localStorage.getItem(storageKey)) return;
						setTheme(event.matches ? 'dark' : 'light', false);
					};

					setTheme(getPreferred(), false);

					if (toggle) {
						toggle.addEventListener('click', () => {
							const next = root.dataset.theme === 'dark' ? 'light' : 'dark';
							setTheme(next);
						});
					}

					media.addEventListener('change', syncSystem);
				} catch (error) {
					console.error('Theme toggle failed', error);
				}
			})();
		</script>
	</body>
</html>
