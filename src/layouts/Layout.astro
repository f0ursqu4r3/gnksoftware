---
import "../styles/global.css";

import SpeedInsights from "@vercel/speed-insights/astro";
import Analytics from '@vercel/analytics/astro';
import GTag from '../components/GTag.astro';

type Props = {
	title?: string;
	description?: string;
};

const {
	title = 'G&K Software, LLC',
	description = 'Enterprise modernization and internal tooling without the agency theater.',
} = Astro.props;

---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
	<meta name="viewport" content="width=device-width" />
	<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
	<meta name="generator" content={Astro.generator} />
	<title>{title}</title>
	<meta name="description" content={description} />
	<link rel="preconnect" href="https://fonts.googleapis.com" />
	<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
	<link
		href="https://fonts.googleapis.com/css2?family=DM+Serif+Display:ital,wght@0,400;1,400&family=Work+Sans:wght@400;500;600;700&display=swap"
		rel="stylesheet"
	/>
</head>
	<body
		class="m-0 min-h-screen bg-(--color-cream) text-(--color-ink) font-(--font-sans) antialiased selection:bg-(--color-line) selection:text-black"
	>
		<slot />
		<SpeedInsights />
		<Analytics />
		<GTag />
	</body>
</html>
